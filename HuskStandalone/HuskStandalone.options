DefaultValue=
Type=String
Label=Pass Prim/s

[override_--settings]
Category=Rendering
CategoryOrder=1
Index=6
Description=Enables --settings Husk option.
Label=Enable Settings Prim/s
Type=Boolean
DefaultValue=False

[--settings]
Category=Rendering
CategoryOrder=1
Index=7
Description=Render using the RenderSettings prim/s specified.
Multiple render settings can be specified using a comma or space separated list and/or pattern matching.
When disabled or blank defaults to either the RenderPass.renderSource (if --pass is set) or the layer's renderSettingsPrimPath metadata.
DefaultValue=
Type=String
Label=Settings Prim/s

[override_--slap-comp]
Category=Rendering
CategoryOrder=1
Index=8
